primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/leafshade]
monitor = ${env:MONITOR:}
width = 100%
height = 32 
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2 
line-color = #f00

border-size = 15 
border-bottom-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2 2 

